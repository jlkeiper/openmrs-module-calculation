<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    
	<changeSet id="20120316-1300" author="mseaton">
        <preConditions onFail="MARK_RAN">
        	<not><tableExists tableName="calculation_registration" /></not>
        </preConditions>
        <comment>
        	Adding calculation_registration table
        </comment>
        <createTable tableName="calculation_registration">
            <column name="calculation_registration_id" autoIncrement="true" type="int">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="token" type="varchar(255)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="provider_class_name" type="varchar(512)">
                <constraints nullable="false" />
            </column>
            <column name="calculation_name" type="varchar(512)">
                <constraints nullable="false" />
            </column>
            <column name="configuration" type="text" />
			<column name="uuid" type="char(38)">
				<constraints nullable="false" unique="true" />
			</column>
        </createTable>
    </changeSet>

    <changeSet id="20121203-1500" author="jkeiper">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="calculation_experimental" /></not>
        </preConditions>
        <comment>
            Adding calculation_experimental table
        </comment>
        <createTable tableName="calculation_experimental">
            <column name="calculation_experimental_id" autoIncrement="true" type="int">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="person_id" type="int">
                <constraints nullable="false" />
            </column>
            <column name="class_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="parameter_values" type="varchar(512)" />
            <column name="result" type="text" />
            <column name="date_now" type="datetime" >
                <constraints nullable="false"/>
            </column>
            <column name="date_updated" type="datetime" >
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="person_id_for_calculation_experimental"
                                 baseTableName="calculation_experimental" baseColumnNames="person_id"
                                 referencedTableName="person" referencedColumnNames="person_id"/>
    </changeSet>
</databaseChangeLog>